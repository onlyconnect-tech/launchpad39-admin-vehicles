        <h1>ADD VEHICLE {{#if ownerCode}}to owner: <span class="label label-default">{{ownerCode}}</span>{{/if}}</h1>

        <div class="row" id="formErrors">
                <div class="col-sm-12">
                        {{#each errors}}
                        <p class="bg-danger">{{this}}</p>
                        {{/each}}
                </div>
        </div>

        <form action="/admin/add_vehicle" method="POST">
                <div class="form-group"> 
                        <label for="queueName">QUEUE publishing</label>
                        <input type="text" class="form-control" id="queueName" name="queue_name" placeholder="Queue">
                </div>
                <div class="form-group">
                        <label for="droneType">VEHICLE TYPE</label>
                        <select id="droneType" name="drone_type"  class="form-control">
                                        <option value="-1">--- vehicle type --</option>
                                 {{#each vehiclesTypes}}
                                        <option value="{{this}}">{{this}}</option>
                                 {{/each}}
                        </select>
                </div>
                 {{#unless ownerCode}}
                        <div class="form-group">
                                <label for="owner">OWNER</label>
                                <select id="owner" name="id_owner"  class="form-control">
                                                        <option value="-1">--- owner --</option>
                                                        {{#each listOwners}}
                                                        <option value="{{id}}">{{owner_code}}</option>
                                                        {{/each}}
                                        </select>
                        </div>
                 {{/unless}}

                 {{#if ownerCode}}
                        <input type="hidden" name="ownerCode" value="{{ownerCode}}">
                        <input type="hidden" name="id_owner" value="{{idOwner}}">
                        <input type="hidden" name="isFromOwner" value="true">
                 {{/if}}

               <button type="submit" class="btn btn-default">Add</button>
        </form>

       

